function kayitol() {
    let add = document.getElementById("kayitad").value;
    let email = document.getElementById("kayitemail").value;
    let sifre = document.getElementById("kayitsifre").value;

    if (localStorage.getItem("kayitemail") === email) {
        alert("BU KULLANICI MEVCUTTUR LÜTFEN GİRİŞ YAPIN.");
        return;
    }
    localStorage.setItem("kayitad", add);
    localStorage.setItem("kayitemail", email);
    localStorage.setItem("kayitsifre", sifre);

    alert("KAYDINIZ BAŞARILI");
    window.location.href = "login.html";
}
function girisyap() {
    let ad = document.getElementById("girisad").value;
    let sifre = document.getElementById("girissifre").value;

    let kayitliad = localStorage.getItem("girisad");
    let kayitliSifre = localStorage.getItem("girissifre");

    if (ad === kayitliad && sifre === kayitliSifre) {
        localStorage.setItem("login", "ok");
        window.location.href = "index.html";
    } else {
        alert("KULLANICI YOK VEYA ŞİFRE YANLIŞ");
    }
}
function kayitbtn()
{
    document.getElementsByClassName("kayitolma")[0].style.display = "block";
    document.getElementsByClassName("kayitolma")[0].style.opacity = "10%";
}